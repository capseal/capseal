{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BEF Benchmark Policy v1",
  "type": "object",
  "required": ["schema", "policy_id", "policy_version", "tracks"],
  "properties": {
    "schema": {"const": "bef_benchmark_policy_v1"},
    "policy_id": {"type": "string"},
    "policy_version": {"type": "string"},
    "tracks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["track_id", "rules"],
        "properties": {
          "track_id": {"type": "string"},
          "description": {"type": "string"},
          "rules": {
            "type": "object",
            "properties": {
              "forbid_gpu": {"type": "boolean"},
              "require_deterministic_build": {"type": "boolean"},
              "required_public_outputs": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
